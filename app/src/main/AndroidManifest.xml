<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mundos_virtuales.sanbotmv">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="FORBID_PIR"
                android:value="true" />
            <meta-data
                android:name="RECOGNIZE_MODE"
                android:value="1" />
        </activity>
        <activity android:name=".EnterUserActivity" />
        <activity android:name=".OptionsActivity" />
        <activity android:name=".GetNumberActivity" />
        <activity
            android:name=".ActivityListArticles"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ActivityDetailsArticle"
            android:label="@string/titulo_actividad_detalle"
            android:parentActivityName=".ActivityListArticles"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityListArticles" />
        </activity>
    </application>

</manifest>